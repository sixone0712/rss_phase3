<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="genres">

    <select id="selectAll" resultType="GenreVo">
        select * from rsss."genres" where validity is true order by id asc
    </select>

    <insert id="insert" parameterType="GenreVo">
        insert into rsss."genres" (
        name,
        category,
        created,
        modified,
        validity
        ) values (
        #{name},
        #{category},
        now(),
        now(),
        true
        )
    </insert>

    <select id="selectById" resultType="GenreVo">
        select * from rsss."genres"
        where
        validity is true
        <if test="id!=null and id!=''">
            and id = #{id}
        </if>
    </select>

    <select id="selectByName" resultType="GenreVo">
        select * from rsss."genres"
        where
        validity is true
        <if test="name!=null and name!=''">
            and name = #{name}
        </if>
    </select>

    <update id="update" parameterType="GenreVo">
        update rsss."genres"
            set name = #{name},
                category = #{category},
                modified = now()
        where id = #{id}
    </update>

    <delete id="delete">
        delete
            from rsss."genres"
            where id = #{id}
    </delete>

    <select id="selectUpdate" resultType="Date">
        select update from rsss."genreUpdate" order by update desc limit 1
    </select>

    <update id="updateUpdate" parameterType="Date">
        update rsss."genreUpdate" set update = now() where update=(select update from rsss."genreUpdate" order by update desc limit 1)
    </update>

    <insert id="insertUpdate">
        insert into rsss."genreUpdate" (update) values (now())
    </insert>

